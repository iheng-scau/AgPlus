<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_555555"
    android:paddingBottom="30dp"
    tools:context="org.excode.agp.activities.SplashActivity">
    <ImageView
        android:id="@+id/ic_agp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_agp"
        android:layout_above="@+id/txt_opyright"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/copyright_splash"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="10dp"
        android:paddingBottom="10dp"
        android:fontFamily=""
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_opyright"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
</RelativeLayout>
